<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.ereuse.scanner.activities.SnapshotChooseActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ereuse_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/emphasis_1"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ereuse_toolbar"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:paddingTop="8px">
            <ImageButton
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:id="@+id/workbench_settings_button"
                android:src="@drawable/settings_tools"
                android:scaleType="centerInside"
                android:onClick="showWorkbenchSettings"
                android:background="@color/zxing_transparent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_toRightOf="@id/workbench_settings_button"
                android:layout_alignBaseline ="@id/workbench_settings_button"
                android:paddingLeft="@dimen/text_padding"
                android:id="@+id/workbench_configuration_text"
                android:text="@string/workbench_settings"
                android:onClick="showWorkbenchSettings"
                android:textSize="14sp"
                android:gravity="center_vertical" />
            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/workbench_settings_button"
                android:layout_marginTop="@dimen/button_padding"
                android:id="@+id/workbench_webview">
            </WebView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
