<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gradeTitleTextView"
        android:textColor="@color/black"
        android:background="@color/emphasis_1"
        android:layout_alignParentTop="true"
        android:padding="@dimen/button_padding"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gradeTitleTextView"
        android:id="@+id/gradeHelpTextView"
        android:layout_margin="@dimen/activity_bottom_margin"
        android:textColor="@color/black"/>
<RadioGroup
    android:id="@+id/gradeRadioGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/gradeHelpTextView"
    android:layout_margin="@dimen/activity_bottom_margin">
</RadioGroup>

</RelativeLayout>